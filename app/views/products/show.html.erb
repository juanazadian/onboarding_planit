<%= render 'home/header' %>
<main class="container-fluid bg-tertiary full-page">
  <section class="row justify-content-center">
    <section class="card col-8 p-0 rounded-0 full-page">
      <%= image_tag @product.img, class: "h-25 card-img-top rounded-0 object-fit-cover" %>
      <div class="card-body p-4">
        <h4><b><%= @product.name %></b></h4>
        <p class="fs-6 my-3"><%= @product.description %></p>
        <p class="text-body fs-3 m-0 mt-4"><b>$<span id="cost"><%= @product.cost.to_i %></span></b><span class="fs-6 text-gray">  x invitado</span></p>
        <div class="col-12 card border-light border-0 border-top rounded-0 shadow-none my-4 p-0">
          <div class="card-body d-flex justify-content-between px-0">
            <div class="col-2">
              <p class="text-body fs-4 m-0">I N V I T A D O S</p>
              <div class="def-number-input number-input my-3">
                <input class="quantity" min="0" name="quantity" value="1" type="number" id="invitados">
                <button id="downbtn" class="minus"></button>
                <button id="upbtn" class="plus"></button>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6 col-xxl-4 mt-5">
          <div class="row d-flex justify-content-between ">
            <div class="col-4 mx-4">
              <h4>Total</h4>
            </div>
            <div class="col-4">
              <h4><b>$<span id="total"><%= @product.cost.to_i %></span></b></h4>
            </div>
          </div>
          <div class="row d-flex justify-content-between">
            <div class="col-5 main-button button-size-medium bg-white text-dark text-center fs-4 shadow m-4 p-3">
              Agregar a lista
            </div>
            <div class="col-5 main-button button-size-medium text-dark text-center fs-4 m-4 p-3">
              <p class="d-none" id="productid"><%=@product.id%></p>
              <a id="comprar" href="" class="text-decoration-none">
                <b>Comprar</b>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </section>
</main>

