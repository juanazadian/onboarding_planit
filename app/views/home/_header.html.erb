<header class="container-fluid header-background ">
  <section class="row d-flex justify-content-between">
    <div class="col-2 col-xxl-1 pt-2 p-4 p-xxl-0 pt-xxl-2">
      <a href=<%= root_path() %>>
        <%= image_tag 'logo-blanco.svg', class: "img-fluid" %>
      </a>
    </div>
    <div class="col-5 d-flex pt-0 pt-xxl-3 align-items-center justify-content-end">
      <% if user_signed_in? %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-light fs-4 text-white fs-2" %>
          <%= link_to 'Edit Information', edit_user_registration_path, class: "btn btn-light fs-4 text-white fs-2" %>
          <i class="fas fa-parachute-box text-white"></i>
          <a href="<%= purchases_path %>" class="text-decoration-none">
            <h6 class="text-white m-2 fs-3">Mis compras</h6>
          </a>
      <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: "btn btn-light fs-4 text-white fs-2" %>
      <% end %>
    </div>
  </section>
</header>
