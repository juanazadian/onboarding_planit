<%= render 'home/header' %>

<main class="container">
  <section class="row">
    <p class="fs-4 mt-5">S E R V I C I O S</p>
  </section>
  <section class="row row-cols-6 justify-content-center">
      <div class="col-2 col-lg-1 d-flex flex-column align-items-center">
        <%= image_tag 'tutoral.svg', class: "img-fluid border border-primary service-box" %>
        <p class="fs-4 m-2">Tutorial</p>
      </div>
      <% @categories.each do |c| %>
        <div class="col-3 col-md-2 col-lg-1 d-flex flex-column align-items-center">
          <a href="/<%= c.id %>" class="text-decoration-none text-center">
            <%= image_tag c.img, class: "img-fluid service-box" %>
            <p class="fs-4 m-2"><%= c.name %></p>
          </a>
        </div>
      <% end %>
  </section>
  <section class="row justify-content-center mt-4">
    <% @providers.each do |p| %>
      <div class="col-3 card m-3 rounded d-flex flex-column shadow m-4 p-0">
        <a href="<%= provider_path(p) %>" class="text-decoration-none">
          <div class="card-body d-flex flex-column pb-0">
            <%= image_tag("#{p.img}") %>
            <p class="text-body fs-3 m-0 mt-3"><b><%= p.name %></b></p>
            <p class="text-darky fs-6 m-0"><small> <%= p.desc[0,80] %><%= '...' if (p.desc.length > 35) %></small></p>
            <% if p.delivery %>
              <div class="row m-1 fs-6">
                <div class="col-1 p-0">
                  <i class="fas fa-truck fa-sm text-primary"></i>
                </div>
                <div class="col-10 p-0">
                  <p class="text-darky">Entrega a domicilio</p>
                </div>
              </div>
            <% else %>
              <div class="row m-2">
                <div class="row d-flex no-gutters p-0">
                  <div class="col-10 p-0">
                    <p class="fs-6 mx-1 text-darky">Retiro en el local</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </a>
      </div>
    <% end %>
  </section>

</main>
